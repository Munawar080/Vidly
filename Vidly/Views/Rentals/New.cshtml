@model dynamic
@{
    ViewBag.Title = "New Rental Form";
}

<h2>New Rental Form</h2>

<form id="newRental">
    <div class="form-group">
        <label class="input-label">Customer</label>
        <div class="tt-container">
                                          @*add the method of form validation*@                      
            <input id="customer" name="customer" required data-rule-validCustomer="true" type="text" value="" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input required id="movie" name="movie" type="text" value="" class="form-control" />

        </div>
    </div>

    @*placeholder for list*@
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>
    

    <button class="btn btn-primary">Submit</button>
</form>



@section scripts {
   

    //@*validation bundle*@
    @Scripts.Render("~/bundles/jqueryval");

    <script>

        $(document).ready(function () {
            var vm = {
                movieIds : []
            }

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }

            });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movie?query=%QUERY',
                    wildcard: '%QUERY'
                }

            });

            $('#customer').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'customers',
                display: 'name',
                source: customers
            }).on("typeahead:select", function(e, customer){
                e.preventDefault();
                vm.customerId = customer.id;

            });

            $('#movie').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'movies',
                display: 'name',
                source: movies
            }).on("typeahead:select", function (e, movie) {

                //append the movie name in the list
                $('#movies').append("<li class='list-group-item'>" + movie.name + "</li>")

                // clear the input field
                $("#movie").typeahead("val", " ");

                vm.movieIds.push(movie.id);
            });

            // validate customer to select valid customer this is a custom validator
            $.validator.addMethod("validCustomer", function(){
                return vm.customerId && vm.customerId !== 0

            }, "please select a valid customer")



            // validation form before submitted by jquery validate method
            var validator = $("#newRental").validate({

                submitHandler: function (e) {
                    e.preventDefault();
                    $.ajax({
                        url: "/api/rental",
                        method: "post",
                        data: vm
                    }).done(function () {
                        toastr.success("Rentals successfully recorded.");

                        // when successfully submitted the input field get empty
                        $("#customer").typeahead("val", "");
                        $("#movie").typeahead("val", "");
                        $("#movies").empty();

                        // same as for movie array

                        vm = { movieIds: [] };
                        validator.resetForm();
                    })
                    .fail(function () {
                        toastr.error("Somethig unexpected happen");
                    })
                }

            });

        })


    </script>



}



