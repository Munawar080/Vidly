<h2>@Model.Id</h2>*@



@*view model syntax to dispay the movie name*@
<h2>@Model.Movies.Name</h2> 


@*let's display the list of customers using Razor view syntax  *@


@*apply class conditionally*@
@*@{
    var classname = Model.Customers.Count > 0 ? "popular" : null;
}*@

@*<h2 class="@popular">@Model.Movies.Name</h2>*@



@if (Model.Customers.Count == 0)
{
    <p>No anyone yet</p>
}
else
{
    <ul>
    @foreach(var customer in Model.Customers){
         <li>
           @customer.Name
        </li>
    }
    </ul>
    
}

